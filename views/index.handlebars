<h1>Burgers!</h1>

<h2>Eat some more burgers!</h2>

<main>
  <div class="container">
        <ul>
{{#each burgers}}
{{#unless this.devoured}}
<div>
  <form action="burgers/{{this.id}}" method="PUT">
    <button type="submit" class="change-eaten" data-id="{{id}}" data-neweaten="{{devoured}}">{{this.burger_name}}</button>
  </form>
  </div>
{{/unless}}
{{/each}}
</ul>

<h2>Burgers you've eaten so far</h2>

  {{#each burgers}}
  {{#if this.devoured}}
  <div class="devoured">
    <div>
      {{this.burger_name}}
    </div>
  </div>
  {{/if}}
  {{/each}}
</div>
</main>
<h2>Add a Burger</h2>
    <form action="/api/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Burger me here!">
      <button type="submit" class="addBurger">Add The Burger</button>
    </form>
  </div>
