<h1>Burgers!</h1>

<h2>Eat some more burgers!</h2>


{{#each burger}}
{{#unless this.devoured}}
<div>
  <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
    <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
  </form>
</div>
{{/unless}}
{{/each}}


<h2>Burgers you've eaten so far</h2>

<ul>
  {{#each burger}}
  {{#if this.devoured}}
  <div class="devoured">
    <div>
      {{this.burger_name}}
    </div>
  </div>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>